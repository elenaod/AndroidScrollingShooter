<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Upgrade" 
    android:background="#000000">

	<TextView
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:id="@+id/charName"
	    android:gravity="center_horizontal"
	    android:textColor="#f69c00"
	    android:textAlignment="center"/>
	
 	<LinearLayout
	    android:orientation="horizontal"
	    android:layout_below="@id/charName"
	    android:id="@+id/fireLayout"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content">
	    
		<Button
	    	android:id="@+id/buttonFire"
	    	android:layout_height="fill_parent"
	    	android:layout_width="wrap_content"
	    	android:background="@drawable/fire"
	    	android:gravity="left"/>
		<TextView
	    	android:id="@+id/fireValue"
	    	android:gravity="center"
	    	android:textIsSelectable="false"
	    	android:layout_height="fill_parent"
	    	android:layout_width="wrap_content"
	    	android:textColor="#f69c00"
	    	android:textAlignment="center"/>
	</LinearLayout>  
	
 	<LinearLayout
	    android:orientation="horizontal"
	    android:layout_below="@id/fireLayout"
	    android:id="@+id/iceLayout"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content">
		
		<Button
	    	android:id="@+id/buttonIce"
	    	android:layout_height="fill_parent"
	    	android:layout_width="wrap_content"
	    	android:background="@drawable/ice"
	    	android:gravity="left"/>
		<TextView
	    	android:id="@+id/iceValue"
	    	android:layout_height="fill_parent"
	    	android:layout_width="wrap_content"
	    	android:gravity="center"
	    	android:textColor="#f69c00"
	    	android:textAlignment="center"/>
	</LinearLayout>
	
	<LinearLayout
	    android:orientation="horizontal"
	    android:layout_below="@id/iceLayout"
	    android:id="@+id/earthLayout"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content">
		
		<Button
	    	android:id="@+id/buttonEarth"
	    	android:layout_height="fill_parent"
	    	android:layout_width="wrap_content"
	    	android:background="@drawable/earth"
	    	android:gravity="left"/>
		
		<TextView
	    	android:id="@+id/earthValue"
	    	android:layout_height="fill_parent"
	    	android:layout_width="wrap_content"
	    	android:gravity="center"
	    	android:textColor="#f69c00"
	    	android:textAlignment="center"/>
	</LinearLayout>
	
	<LinearLayout
	    android:orientation="horizontal"
	    android:layout_below="@id/earthLayout"
	    android:id="@+id/magicLayout"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content">
		<Button
	    	android:id="@+id/buttonMagic"
	    	android:layout_height="fill_parent"
	    	android:layout_width="wrap_content"
	    	android:background="@drawable/magic"
	    	android:gravity="left"/>
		<TextView
	    	android:id="@+id/magicValue"
	    	android:layout_height="fill_parent"
	    	android:layout_width="wrap_content"
	    	android:gravity="center"
	    	android:textColor="#f69c00"
	    	android:textAlignment="center"/>
	</LinearLayout>
	
	<TextView
	    android:layout_below="@id/magicLayout"
	    android:id="@+id/points"
	    android:gravity="center_horizontal"
	    android:textColor="#f69c00"
	    android:layout_height="wrap_content"
	    android:layout_width="wrap_content"
	    android:textAlignment="center"/>
</RelativeLayout>
