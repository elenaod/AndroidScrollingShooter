<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainMenu" 
    android:orientation="vertical"
    android:background="#000000">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/wizard_title"
        android:layout_gravity="center"
        android:id="@+id/logo"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>
	
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/changeChar"
        android:layout_gravity="center"
        android:background="@drawable/btn_create_character"
        android:id="@+id/change_character"/>
    
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/new_game"
        android:background="@drawable/btn_play"
        android:layout_gravity="center"
        android:text="@string/startGame"/>
    
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/upgradeChar"
        android:layout_gravity="center"
        android:background="@drawable/btn_upgrade"
        android:id="@+id/upgrade_character"/>
    
    
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hallOfFame"
        android:background="@drawable/btn_hall_of_fame"
        android:layout_gravity="center"
        android:id="@+id/hall_of_fame"/>
</LinearLayout>
