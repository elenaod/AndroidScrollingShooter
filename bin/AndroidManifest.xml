<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.fmi.android.wizard"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="18" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.fmi.android.wizard.MainMenu"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.fmi.android.wizard.HallOfFame"
            android:label="@string/title_activity_hall_of_fame" >
        </activity>
        <activity
            android:name="com.example.fmi.android.wizard.Upgrade"
            android:label="@string/title_activity_upgrade" >
        </activity>
        <activity
            android:name="com.example.fmi.android.wizard.Game"
            android:label="@string/title_activity_game" >
        </activity>
        <activity
            android:name="com.example.fmi.android.wizard.ChangeCharacter"
            android:label="@string/title_activity_change_character" >
        </activity>
        <activity
            android:name="com.example.fmi.android.wizard.TestActivity"
            android:label="@string/title_activity_test" >
        </activity>
    </application>

</manifest>
